root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Indentation
[*.{ts,tsx,js,jsx,mjs,cjs,scss,css,html,htm,pcss}]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

# Whitespace
[*.{ts,tsx,js,jsx,mjs,cjs,scss,css,json}]
trim_trailing_whitespace = true
