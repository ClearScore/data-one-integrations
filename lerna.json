{
  "version": "independent",
  "npmClient": "yarn",
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "allowBranch": "master",
      "verifyAccess": false,
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "commitHooks": false,
      "registry": "https://registry.npmjs.org/"
    },
    "version": {
      "allowBranch": ["main", "master"],
      "conventionalCommits": true,
      "createRelease": "github"
    }
  }
}
